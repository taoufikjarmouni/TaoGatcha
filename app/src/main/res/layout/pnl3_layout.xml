<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/btnJouer"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginBottom="12dp"
        android:text="Jouer"
        app:backgroundTint="#F55E93"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="396dp"
        android:layout_height="151dp"
        app:layout_constraintBottom_toTopOf="@+id/textLayoutNom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/poologo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp"
        android:text="Voici les paramÃ¨tres,"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textNomView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPseudoDonne"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:text="inconnu"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textLayoutNom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAccueil"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginBottom="12dp"
        android:text="Accueil"
        app:backgroundTint="#F55E93"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:text="Reset"
        app:backgroundTint="#F55E93"
        app:layout_constraintBottom_toTopOf="@+id/btnJouer"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPseudoView"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:background="#4c51f9"
        android:gravity="center"
        android:text="VOTRE PSEUDO"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSoumettre"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textNomView"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:background="#4c51f9"
        android:gravity="center"
        android:text="NOM DU TAOGATCHA"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/textPseudoView"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSoumettre"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:text="Soumettre"
        app:backgroundTint="#F55E93"
        app:layout_constraintBottom_toTopOf="@+id/btnAccueil"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLayoutNom"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textPseudoView"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F55E93"
            android:hint="Entrez ici le nom"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#4c51f9"
            android:textColorHint="#FFFFFF"
            android:textSize="14dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLayoutPseudo"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnSoumettre"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputPseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F55E93"
            android:hint="Entrez ici votre pseudo"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#4c51f9"
            android:textColorHint="#FFFFFF"
            android:textSize="14dp" />
    </com.google.android.material.textfield.TextInputLayout>

    EditText

</androidx.constraintlayout.widget.ConstraintLayout>